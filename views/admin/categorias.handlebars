<h2>Lista de categorias</h2>
<hr>
<a href="/admin/cates/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body" >
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <!--<small>{{data}}</small>--><br>
           <div class="row">
                <a href="/admin/cates/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
                <!--<a href=""><button class="btn btn-danger mt-3">Deletar</button></a>-->
                <form action="/admin/cates/delete" method="POST" class="col-2">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-danger mt-3">Deletar</button>
                </form>
            </div>
            
        </div>
    </div>

{{/each}}