    <div class="aler alert-danger">{{texto}}</div>

{{/each}}

<h3>Nova categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/cates/nova" method="POST">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" placeholder="Nome da categoria" class="form-control">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" placeholder="Slug da categoria" class="form-control">
                <br>
            <button type="submit" class="btn btn-success">Adicionar categoria</button>
        </form>
    </div>
</div>