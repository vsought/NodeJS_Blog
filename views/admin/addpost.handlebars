{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/novo" method="POST">
            <label for="titulo">Título: </label>
                <input type="text" name="titulo" placeholder="Titulo da postagem" class="form-control">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" placeholder="Slug da postagem" class="form-control">
            <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" placeholder="Descrição da postagem" class="form-control">
            <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" placeholder="Digite algo..." class="form-control"></textarea>
            <label for="categoria">Categoria: </label>
                <select name="categoria" class="custom-select">
                    <option value="0">Nenhuma categoria</option>
                    {{#each categorias}}
                            <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                            <option value="0">Nenhuma categoria</option>
                    {{/each}}
                </select>
            <button type="submit" class="btn btn-success mt-3">Adicionar postagem</button>
        </form>
    </div>
</div>